version: "3"
services:
  beyond-app:
    image: beyond-app
    container_name : beyond-app
    ports:
      - "8080:8080"
    networks:
      - spring-mysql  
    depends_on:
      - mysqldb

  mysqldb:
    image: mysql:8
    container_name: mysqldb
    networks:
      - spring-mysql
    ports:
      - "3306:3306"
    environment:
      - MYSQL_ROOT_PASSWORD=root
      - MYSQL_DATABASE=root
      - MYSQL_USER=Beyond
      - MYSQL_PASSWORD=123456
      - MYSQL_DATABASE=beyond

networks:
  spring-mysql: